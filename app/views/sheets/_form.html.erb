<%= form_for(@sheet) do |f| %>
  <% if @sheet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sheet.errors.count, "error") %> prohibited this sheet from being saved:</h2>

      <ul>
      <% @sheet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.hidden_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :closed %><br />
    <%= f.check_box :closed %>
  </div>
  <div class="field">
    <%= f.label :visibility %><br />
    <%= f.number_field :visibility %>
  </div>

  <h2>Fields</h2>
  <% @basic_field_types.each do |field| %>
    <%= check_box_tag, id: field_cb, value: field.id %> <%= field.name %>  
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>
